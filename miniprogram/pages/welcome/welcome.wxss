/* 背景 */
/* 全页面设置 */
page {
  background-color: #8ce2f3;
  height: 100%;
}

/* flex  弹性 布局 */

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 图片 */

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  margin-bottom: 100rpx;
  border-radius: 10%;
  overflow: hidden;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
}

.moto {
  font-size: 26rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #0b3c70;
}

/* 按钮 */

.moto-content {
  border: 1px solid #0b3c70;
  height: 80rpx;
  width: 200rpx;
  border-radius: 5px;
  text-align: center;
  margin-top: 200rpx;
}
